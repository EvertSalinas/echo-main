panel "Orders Totales" do
  p Order.count
end

panel "Ordenes por mes" do
  year = Date.current.year
  table do
    thead do
      tr do
        %w[Month Total].each &method(:th)
      end
    end
    tbody do
      1..12.times do |i|
        date = Date.new(year,i+1,1)
        tr do
          td date.strftime('%B')
          td Order.where(created_at: date.beginning_of_month..date.end_of_month).count
        end
      end
    end
  end
end
